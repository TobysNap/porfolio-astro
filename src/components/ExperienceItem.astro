---
interface Props {
	date: string;
	title: string;
	description: string;
	link?: string;
}

const { date, title, description, link } = Astro.props;
---
<li class="mb-10 ms-4">
	<div
		class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
	>
	</div>
	<time class="mb-1 text-sm font-normal leading-none text-secondary-300"
		>{date}</time
	>
	<h3 class="mt-2 text-2xl font-semibold text-primary">
		{title}
	</h3>
	<p class="mb-4 text-base font-normal max-w-[50ch] text-pretty text-gray-200">
		{description}
	</p>
	{
		link && (
			<a
				href={link}
				class="inline-flex items-center justify-center px-2 py-1 text-xs transition border rounded-full bg-white/5 border-white/10 gap-x-2 md:py-2 md:px-4 md:text-base hover:scale-110 hover:bg-white/10"
			>
				Saber m√°s...{' '}
				<svg
					class="w-3 h-3 ms-2 rtl:rotate-180"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 14 10"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M1 5h12m0 0L9 1m4 4L9 9"
					/>
				</svg>
			</a>
		)
	}
</li>
